@model IEnumerable<MVC_Management.Models.Payment>

@{
    ViewData["Title"] = "Invoive ";
}






<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-9">


                <!-- Main content -->
                <div class="invoice p-3 mb-3">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-8">
                            <h4>
                                <i class="fa fa-file-invoice"></i> Invoice
                                <small class="float-right">Date: @ViewBag.Date</small>
                            </h4>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                        <div class="col-sm-4 invoice-col">
                            From <br />
                            <strong>Crehis Management System.</strong><br>

                            <hr />
                            <address>
                              
                               
                                <strong>To.</strong><br>
                                <strong>Name:</strong> @ViewBag.Name <br>
                                <strong>Surname:</strong> @ViewBag.Surname<br>
                                <strong>PhoneNumber:</strong> @ViewBag.PhoneNumber<br>
                                <strong>Address:</strong> @ViewBag.Address<br>
                             

                            </address>
                            <hr />
                        </div>


                    </div>




                    <!-- /.col -->
                    <div class="col-6">


                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th style="width:50%">Type:</th>
                                    <td>@ViewBag.Type</td>
                                </tr>
                              
                                <tr>
                                    <th>Amout due Was :</th>
                                    <td> @ViewBag.Amout_due</td>
                                </tr>
                                <tr>
                                    <th>Paid:</th>
                                    <td> @ViewBag.PaymenAmount</td>
                                </tr>

                                <tr>
                                    <th>Outsanding Balance:</th>
                                    <td> @ViewBag.Balance</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <!-- this row will not appear when printing -->
               
               
                
                <div class="row no-print">
                  

                    <div class="col-12">
                        

                       <!-- <button type="button" class="btn btn-primary float-right" style="margin-right: 5px;">
                            <a href="invoice-print.html" rel="noopener" target="_blank" class="btn btn-default"><i class="fas fa-print"></i> Print</a>
                            <i class="fas fa-download"></i> Generate PDF
                         </button> -->


                    </div>
                </div>
            </div>
            <!-- /.invoice -->
        </div><!-- /.col -->
    </div><!-- /.row -->


   
    <div class="row">
       
        
        <div class="col-12">
            <div class="row">
                

                               <div class="row">
                                 <div class="col-12">

                                      <div>
                                          <p>Do You wish to recapture the payment  for the same client?</p>
                                          <p>Click <a asp-controller="Payments" asp-action="Aloan">here </a></p>
                      
                                      </div>

                                <div>
                            <div>


                                <div class="col-4">

                                    <div>

                                        <a asp-controller="Payments" asp-action="Aloan">Back</a>
                                    </div>
                                </div>
        
         </div>
    </div>
            </div>

        </div>

    </div>


</section>
