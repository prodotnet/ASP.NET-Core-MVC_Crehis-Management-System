@{
    ViewData["Title"] = "Clients";
}

<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@ViewBag.NewLoans</h3>
                <p>All Loans</p>
               
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a asp-controller="ClientLoansP" asp-action="OustandingLoans" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@ViewBag.TodayLoans  </h3>

                <p> Loans Made Today</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a asp-controller="ClientLoansP" asp-action="LoansMadeToday" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@ViewBag.Registrations</h3>

                <p>User Registrations</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a asp-controller ="Registrations" asp-action="Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@ViewBag.LoansdueToday </h3>

                <p>Today Dues</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a asp-controller="Registrations" asp-action="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>
<!-- /.row -->


<div class="row">

    <div class="col-md-6">
        <!-- BAR CHART -->
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Progress to Target</h3>
            </div>
            <div class="card-body">
                <div class="chart">
                    <canvas id="doughnutChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">Bar Chart</h3>
            </div>
            <div class="card-body">
                <div class="chart">
                    <canvas id="barChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="card card-danger">
        <div class="card-header ">
            <h3 class="card-title">Loans Due Today</h3>
        </div>
        <div class="card-body">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name & Surname</th>
                        <th>Phone Number</th>
                        <th>Alternative Number</th>
                        <th>Loan Amount</th>
                        <th>Amount Due</th>
                        <th>Balance</th>
                        <th>Due Date</th>
                        <th>Address</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var loan in ViewBag.LoansDueTodayList)
                    {
                        <tr>
                            <td>@loan.FullName</td>
                            <td>@loan.PhoneNumber</td>
                            <td>@loan.AlternativeNumber</td>
                            <td>@loan.loanAmount</td>
                            <td>@loan.AmountDue</td>
                            <td>@loan.Balance</td>
                            <td>@loan.DueDate.ToShortDateString()</td>
                            <td>@loan.Address</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

      
    </div>

</div>
</div>


