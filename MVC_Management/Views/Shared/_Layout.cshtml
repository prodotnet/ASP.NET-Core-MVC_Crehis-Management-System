                var confirmation = confirm("A target has already been set for this month. Do you want to continue and overwrite it?");
                if (!confirmation) {
                    window.location.href = '@Url.Action("Index", "Home")';
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


