@model MVC_Management.ViewModal.ClientsViewModal

@{
    ViewData["Title"] = "Clients List";
}


<hr/>





<div class="card">
    <div class="card-body">
      <div class="col-md-4">
        <div class="row">

        <form asp-action="Index" enctype="multipart/form-data" class="form-vertical">

            <div class="row">


                <div class="col-md-11">
                   

                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />

                    </div>

                </div>

             


                
            </div>

        </form>
       </div>

     </div>
  </div>

</div>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Clients List</h3>
    </div>

   <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Al_Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount_due)
            </th>
            <th>
               Action
            </th>
                    



        </tr>
    </thead>
    <tbody>
                @foreach (var item in Model.Allclients)
                {
         <tr>
           
            
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Al_Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount_due)
            </td>
            <td>

                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn  btn-primary"><i class="fa fa-pen"></i> Update</a> |
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn  btn-warning"><i class="fa fa-eye"></i> View</a>

                            <!--         <a asp-action="Delete" asp-route-id="@item.ID" class="btn  btn-danger"><i class="fa fa-eye"></i> Delete</a> -->


                        </td>
         </tr>
}
    </tbody>

            <tfoot class="card-body">
                <tr>
                    <th style="text-align:right"></th>
                    <th style="text-align:right"></th>
                    <th style="text-align:right"></th>
                    <th style="text-align:right"></th>
                    <th style="text-align:right"></th>
                    <th style="text-align:right"></th>
                    <th style="text-align:right"></th>
                    <th style="text-align:right">@ViewBag.AmountDue</th>
                    <th style="text-align:right"></th>
                    
                    
                </tr>
            </tfoot>
</table>
</div>
</div>