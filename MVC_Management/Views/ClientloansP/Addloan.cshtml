@model MVC_Management.ViewModal.ClientsViewModal

@{
    ViewData["Title"] = "Clients List";
}


<hr />







<div class="card">
    <div class="card-header">
        <h3 class="card-title">Please Search A client here and  Add A loan </h3>
    </div>

    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Al_Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                   
                    <th>
                        Add A Loan
                    </th>




                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Allclients)
                {
                    <tr>


                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Al_Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        
                        <td>

                            <a asp-action="Create" asp-route-id="@item.ID" class="btn  btn-success"><i class="fa fa-plus"></i> Loan</a>


                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
 